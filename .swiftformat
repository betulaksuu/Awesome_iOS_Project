# file options

--exclude Tests/XCTestManifests.swift,Tests/BadConfig,Snapshots,Build,PluginTests,**/NeedleGenerated.swift

# format options
--disable wrapMultilineStatementBraces
--allman false
--binarygrouping 4,8
--commas inline
--comments indent
--decimalgrouping 3,6
--elseposition same-line
--empty void
--exponentgrouping disabled
--fractiongrouping disabled
--header ignore
--hexgrouping 4,8
--hexliteralcase uppercase
--ifdef indent
--indent 4
--indentcase false
--importgrouping testable-bottom
--linebreaks lf
--maxwidth none
--octalgrouping 4,8
--operatorfunc spaced
--patternlet hoist
--ranges spaced
--semicolons inline
--stripunusedargs always
--swiftversion 5.7.1
--trimwhitespace always
--wraparguments preserve
--wrapcollections preserve
--organizetypes

# rules

--enable isEmpty
--enable organizeDeclarations

